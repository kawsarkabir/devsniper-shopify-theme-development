<article class="py-8">
  <!-- Blog Title + Article Title -->
  <div class="flex items-center justify-center mb-6">
    <div class="max-w-7xl text-center px-4">
      <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">
        {{ blog.title }}
      </a>
      <h1 class="text-4xl md:text-6xl font-medium mt-2">{{ article.title }}</h1>
    </div>
  </div>

  <!-- Author -->
  {% if section.settings.enable_author %}
    <div class="flex items-center justify-center">
      <div class="max-w-7xl text-center text-gray-600">
        <small>{{ article.author }}</small>
      </div>
    </div>
  {% endif %}

  <!-- Published date -->
  {% if section.settings.enable_published_date %}
    <div class="flex items-center justify-center mt-2">
      <div class="max-w-7xl text-center text-gray-600">
        <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
          {{ article.published_at | date: format: 'on_date' }}
        </time>
      </div>
    </div>
  {% endif %}

  <!-- Featured Image -->
  <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-6">
    {% if article.image %}
      <img
        class="w-full h-80 md:h-96 object-cover object-center"
        src="{{ article.image | img_url: 'master' }}"
        alt="{{ article.image.alt }}"
      >
    {% else %}
      {% assign placeholder_image = 'lifestyle-1' %}
      {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
    {% endif %}
  </div>

  <!-- Article Content -->
  <div class="flex items-center justify-center">
    <div class="max-w-7xl w-full px-4 prose prose-lg">
      {{ article.content }}
    </div>
  </div>
</article>

{% if blog.comments_enabled? %}
  <div id="comments" class="py-10">
    <div class="flex justify-center">
      <div class="w-full max-w-7xl px-4">
        <!-- Comment Count -->
        {% if article.comments_count > 0 %}
          <h2 class="text-2xl font-semibold mb-6">
            {{ article.comments_count }} Comment{% if article.comments_count > 1 %}s{% endif %}
          </h2>

          <!-- Comment List -->
          <div class="space-y-6">
            {% for comment in article.comments %}
              <div class="border rounded-xl p-5 shadow-sm bg-white">
                <div class="flex items-center justify-between mb-2">
                  <span class="font-semibold text-gray-800">{{ comment.author }}</span>
                  <time class="text-sm text-gray-500">
                    {{ comment.created_at | date: '%b %d, %Y' }}
                  </time>
                </div>
                <p class="text-gray-700 leading-relaxed">{{ comment.content }}</p>
              </div>
            {% endfor %}
          </div>

        {% else %}
          <p class="text-gray-600">There are no comments yet. Be the first to write one!</p>
        {% endif %}

        <hr class="my-10 border-gray-300">

        <!-- Comment Form -->
        <div id="comment_form">
          <h3 class="text-xl font-semibold mb-4">Leave a Comment</h3>

          {% form 'new_comment', article %}
            {% if form.errors %}
              <div class="mb-4 p-4 bg-red-50 border border-red-300 text-red-700 rounded-lg">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            {% if form.posted_successfully? %}
              <div class="mb-4 p-4 bg-green-50 border border-green-300 text-green-800 rounded-lg">
                Your comment has been submitted! It will appear once approved.
              </div>
            {% endif %}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <label for="comment_author" class="block text-gray-700 font-medium mb-2">Name</label>
                <input
                  type="text"
                  id="comment_author"
                  name="comment[author]"
                  required
                  class="w-full border rounded-lg py-3 px-4 focus:ring-2 focus:ring-blue-500 outline-none"
                >
              </div>

              <div>
                <label for="comment_email" class="block text-gray-700 font-medium mb-2">Email (optional)</label>
                <input
                  type="email"
                  id="comment_email"
                  name="comment[email]"
                  class="w-full border rounded-lg py-3 px-4 focus:ring-2 focus:ring-blue-500 outline-none"
                >
              </div>
            </div>

            <div class="mb-6">
              <label for="comment_body" class="block text-gray-700 font-medium mb-2">Comment</label>
              <textarea
                id="comment_body"
                name="comment[body]"
                rows="5"
                required
                class="w-full border rounded-lg py-3 px-4 focus:ring-2 focus:ring-blue-500 outline-none"
              ></textarea>
            </div>

            <button
              type="submit"
              class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold shadow-sm"
            >
              Submit Comment
            </button>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "default": true,
      "label": "Display Author Name"
    },
    {
      "type": "checkbox",
      "id": "enable_published_date",
      "default": true,
      "label": "Display Published Date"
    }
  ]
}
{% endschema %}
